<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/gameFee"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:textSize="40dp"
        android:text="Game Fee"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:orientation= "horizontal">

        <EditText
            android:id="@+id/setPayment"
            android:layout_width="wrap_content"
            android:hint= "Fee/Person"
            android:textSize="20sp"
            android:maxLength="9"
            android:inputType="number"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/setPayBtn"
            android:onClick= "setPayment"
            android:text="ok"
             />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_marginTop="60dp"
        android:onClick="seePayment"
        android:layout_gravity="center_horizontal"
        android:text="See Payment"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:layout_marginTop="40dp"
        android:onClick="backToMatchStart"
        android:layout_gravity="center_horizontal"
        android:text="back"
        android:layout_height="wrap_content" />

</LinearLayout>